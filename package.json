{
  "name": "guardians-of-the-shop",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run sh:dev",
    "build": "react-router build",
    "graphql": "graphql-codegen",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "rr:dev": "react-router dev",
    "rr:typegen": "react-router typegen",
    "sh:dev": "shopify app dev -c shopify.app.dev.toml",
    "sh:deploy": "shopify app deploy -c shopify.app.toml",
    "sh:release": "shopify app release -c shopify.app.toml",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB",
    "db:sync": "wrangler d1 migrations apply DB --remote",
    "cf:typegen": "wrangler types",
    "cf:deploy": "wrangler deploy",
    "cf:release": "pnpm run build && pnpm run db:sync && pnpm run cf:deploy",
    "preview": "pnpm run build && vite preview"
  },
  "dependencies": {
